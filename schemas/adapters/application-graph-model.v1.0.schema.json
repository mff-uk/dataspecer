{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://schemas.dataspecer.com/adapters/application-graph-model.v1.0.schema.json",
    "title": "Application Graph",
    "description": "Represents the structure for generator's application graph. Application graph serves as a model of the application to be generated and is a formal representation of user's requirements on the application content.",
    "type": "object",
    "required": [
      "id",
      "type",
      "label",
      "dataspecification",
      "nodes",
      "edges",
      "datasources"
    ],
    "properties": {
      "id": {
        "type": "string",
        "format": "iri"
      },
      "type": {
        "oneOf": [
          {
            "const": "Application Graph"
          },
          {
            "type": "array",
            "contains": {
              "const": "Application Graph"
            },
            "items": {
              "type": "string"
            }
          }
        ]
      },
      "label": {
        "title": "label",
        "description": "The label or name of the application graph. Label is a human-readable graph identifier.",
        "type": "string",
        "examples": [
          "Example graph label"
        ]
      },
      "dataspecification": {
        "title": "dataspecification",
        "description": "IRI of a Dataspecer data specification from which the application is to be generated. All IRIs within application graph nodes refer to structural models within the context of this data specification.",
        "type": "string",
        "format": "iri",
        "examples": [
          "https://ofn.gov.cz/data-specification/<specification UUID>"
        ]
      },
      "nodes": {
        "title": "Nodes",
        "type": "array",
        "items": {
          "title": "Application graph node",
          "description": "An application graph node represents a unit of the generated application, i.e. an isolated, functional unit to be generated, through which application users fulfill their needs.",
          "type": "object",
          "required": [
            "id",
            "type",
            "node_iri",
            "structure",
            "capability",
            "node_label",
            "config"
          ],
          "properties": {
            "id": {
              "type": "string",
              "format": "iri"
            },
            "type": {
              "oneOf": [
                {
                  "const": "Application graph node"
                },
                {
                  "type": "array",
                  "contains": {
                    "const": "Application graph node"
                  },
                  "items": {
                    "type": "string"
                  }
                }
              ]
            },
            "node_iri": {
              "title": "Node IRI",
              "description": "Unique identification of an application node",
              "type": "string",
              "format": "iri",
              "pattern": "https:\\/\\/example\\.org\\/application_graph\\/nodes\\/[\\d-]+",
              "examples": [
                "https://example.org/application_graph/nodes/1"
              ]
            },
            "structure": {
              "title": "structure",
              "description": "IRI of a Dataspecer data structure model that this node instance refers to. Represents the subject instance on which a capability will be performed.",
              "type": "string",
              "format": "iri",
              "examples": [
                "https://ofn.gov.cz/schema/<structure model id>"
              ]
            },
            "capability": {
              "title": "capability",
              "description": "IRI of a supported capability to be performed on a data structure model.",
              "type": "string",
              "format": "iri",
              "pattern": "https:\\/\\/dataspecer\\.com\\/application_graph\\/capability\\/((list)|(detail)|(create-instance)|(edit-instance)|(delete-instance))",
              "examples": [
                "https://dataspecer.com/application_graph/capability/list"
              ]
            },
            "node_label": {
              "title": "Node Label",
              "type": "object",
              "required": [
                "@value",
                "@language"
              ],
              "properties": {
                "@value": {
                  "title": "Text v daném jazyce",
                  "type": "string"
                },
                "@language": {
                  "title": "Jazyk textu",
                  "type": "string"
                }
              }
            },
            "config": {
              "title": "config",
              "type": "object",
              "required": [
                "id",
                "type"
              ],
              "properties": {
                "id": {
                  "type": "string",
                  "format": "iri"
                },
                "type": {
                  "oneOf": [
                    {
                      "const": "Node configuration"
                    },
                    {
                      "type": "array",
                      "contains": {
                        "const": "Node configuration"
                      },
                      "items": {
                        "type": "string"
                      }
                    }
                  ]
                },
                "starting": {
                  "title": "starting",
                  "type": "boolean"
                },
                "page_title": {
                  "title": "Page Title",
                  "type": "object",
                  "required": [
                    "@value",
                    "@language"
                  ],
                  "properties": {
                    "@value": {
                      "title": "Text v daném jazyce",
                      "type": "string"
                    },
                    "@language": {
                      "title": "Jazyk textu",
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "edges": {
        "title": "Edges",
        "type": "array",
        "items": {
          "title": "Application graph edge",
          "description": "An edge represents a transition between the nodes in the graph. An edge allows the user of the generated application to move from one capability performed on an aggregate to other capability performed on another aggregate.",
          "type": "object",
          "required": [
            "id",
            "type",
            "edge_iri",
            "source_node",
            "target_node",
            "edge_type"
          ],
          "properties": {
            "id": {
              "type": "string",
              "format": "iri"
            },
            "type": {
              "oneOf": [
                {
                  "const": "Application graph edge"
                },
                {
                  "type": "array",
                  "contains": {
                    "const": "Application graph edge"
                  },
                  "items": {
                    "type": "string"
                  }
                }
              ]
            },
            "edge_iri": {
              "title": "Edge IRI",
              "type": "string",
              "format": "iri",
              "pattern": "https:\\/\\/example\\.org\\/application_graph\\/edges\\/[\\d-]+"
            },
            "source_node": {
              "title": "Source Node",
              "type": "string",
              "format": "iri",
              "pattern": "https:\\/\\/example\\.org\\/application_graph\\/nodes\\/[\\d-]+"
            },
            "target_node": {
              "title": "Target Node",
              "type": "string",
              "format": "iri",
              "pattern": "https:\\/\\/example\\.org\\/application_graph\\/nodes\\/[\\d-]+"
            },
            "edge_type": {
              "title": "Edge Type",
              "type": "string"
            }
          }
        }
      },
      "datasources": {
        "title": "Datasources",
        "type": "array",
        "items": {
          "anyOf": [
            {
              "title": "Datasource",
              "type": "object",
              "required": [
                "id",
                "type",
                "label",
                "format",
                "endpoint_uri"
              ],
              "properties": {
                "id": {
                  "type": "string",
                  "format": "iri"
                },
                "type": {
                  "oneOf": [
                    {
                      "const": "Datasource"
                    },
                    {
                      "type": "array",
                      "contains": {
                        "const": "Datasource"
                      },
                      "items": {
                        "type": "string"
                      }
                    }
                  ]
                },
                "label": {
                  "title": "label",
                  "type": "string"
                },
                "format": {
                  "title": "format",
                  "type": "string",
                  "pattern": "(json)|(csv)|(rdf)|(xml)"
                },
                "endpoint_uri": {
                  "title": "Endpoint Uri",
                  "type": "string",
                  "format": "iri"
                }
              }
            },
            {
              "title": "Datasource",
              "type": "object",
              "required": [
                "id",
                "type",
                "label",
                "format"
              ],
              "properties": {
                "id": {
                  "type": "string",
                  "format": "iri"
                },
                "type": {
                  "oneOf": [
                    {
                      "const": "Datasource"
                    },
                    {
                      "type": "array",
                      "contains": {
                        "const": "Datasource"
                      },
                      "items": {
                        "type": "string"
                      }
                    }
                  ]
                },
                "label": {
                  "title": "label",
                  "type": "string"
                },
                "format": {
                  "title": "format",
                  "type": "string",
                  "pattern": "(local)"
                }
              }
            },
            {
              "title": "Datasource",
              "type": "object",
              "required": [
                "id",
                "type",
                "label",
                "format",
                "endpoint_uri"
              ],
              "properties": {
                "id": {
                  "type": "string",
                  "format": "iri"
                },
                "type": {
                  "oneOf": [
                    {
                      "const": "Datasource"
                    },
                    {
                      "type": "array",
                      "contains": {
                        "const": "Datasource"
                      },
                      "items": {
                        "type": "string"
                      }
                    }
                  ]
                },
                "label": {
                  "title": "label",
                  "type": "string"
                },
                "format": {
                  "title": "format",
                  "type": "string",
                  "pattern": "(json)|(csv)|(rdf)|(xml)"
                },
                "endpoint_uri": {
                  "title": "Endpoint URI",
                  "type": "object",
                  "required": [
                    "id",
                    "type",
                    "read",
                    "write"
                  ],
                  "properties": {
                    "id": {
                      "type": "string",
                      "format": "iri"
                    },
                    "type": {
                      "oneOf": [
                        {
                          "const": "Endpoint Uri"
                        },
                        {
                          "type": "array",
                          "contains": {
                            "const": "Endpoint Uri"
                          },
                          "items": {
                            "type": "string"
                          }
                        }
                      ]
                    },
                    "read": {
                      "title": "read",
                      "type": "string",
                      "format": "iri"
                    },
                    "write": {
                      "title": "write",
                      "type": "string",
                      "format": "iri"
                    }
                  }
                }
              }
            }
          ]
        }
      }
    }
  }